<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipe Kendaraan:"
        />

    <EditText
        android:id="@+id/typekendaraan"
        android:hint="[Mobil/Motor]"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_savetype"
        android:text="Save Type"
        android:textSize="12dp"
        android:layout_width="175dp"
        android:layout_height="50dp"/>

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brand [Character >= 5]:"/>

    <EditText
        android:id="@+id/brand"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name [Character >= 5]:"/>

    <EditText
        android:id="@+id/name"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="License:"/>

    <EditText
        android:id="@+id/license"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Speed:"/>

    <EditText
        android:id="@+id/topspeed"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gas Capacity:"/>

    <EditText
        android:id="@+id/gascapacity"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wheel:"/>

    <EditText
        android:id="@+id/wheel"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="0dp"
        android:id="@+id/txt_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type:"/>

    <EditText
        android:id="@+id/type"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="0dp"
        android:id="@+id/ESA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Save Type"/>

    <EditText
        android:id="@+id/entertainment"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_marginHorizontal="20dp"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>